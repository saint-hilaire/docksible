server {
    listen 80;
    listen [::]:80;
    server_name {{ domain }} www.{{ domain }};
    location ~ /.well-known/ {
        allow all;
        root /var/www/html;
    }
    location / {
        proxy_pass  http://docksible_{{ service_to_encrypt}}:{{ port_to_encrypt }};
        proxy_set_header Host      $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location = /xmlrpc.php {
        deny all;
        access_log off;
    }
}
